# ============================================
# MIG33 Clone Backend - Environment Variables
# ============================================
# Copy this file to .env and fill in your values

# ===================
# Server Configuration
# ===================
BACKEND_PORT=5000

# Environment: 'development' or 'production'
NODE_ENV=development

# ===================
# Security (REQUIRED for Production)
# ===================

# JWT secret key - MUST be at least 32 characters
# Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-super-secret-jwt-key-minimum-32-characters-long

# Session secret
SESSION_SECRET=your-super-secret-session-key-here

# Comma-separated list of allowed CORS origins (recommended for production)
# Example: https://yourdomain.com,https://www.yourdomain.com
ALLOWED_ORIGINS=

# ===================
# Database (REQUIRED)
# ===================

# PostgreSQL Database (Neon)
DATABASE_URL=postgresql://user:password@host:port/database?sslmode=require

# Redis Cloud
REDIS_URL=redis://default:password@host:port

# ===================
# Email Service (Brevo - no SMTP needed)
# ===================

# Brevo (Sendinblue) - Free 300 emails/day
# Get API key at: https://app.brevo.com/settings/keys/api
BREVO_API_KEY=your-brevo-api-key
EMAIL_FROM=noreply@yourdomain.com

# ===================
# Image Upload
# ===================

# Cloudinary settings
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=
